# myrepos config file for DSA-110 Project

[dsa110-cnf]
checkout =
    git clone https://github.com/dsa110/dsa110-cnf.git
    cd dsa110-cnf
    git checkout v1.3.0    
update =
    git fetch --tags  --all
    git checkout v1.3.0

[dsa110-hwmc]
